compass = 8
current_compass = 1
tempo_by_4 = 0.50
live_loop :drums do
  in_thread do
    live_loop :tempo_sync do
      cue :tempo0
      sleep tempo_by_4
      cue :tempo25
      sleep tempo_by_4
      cue :tempo5
      sleep tempo_by_4
      cue :tempo75
      sleep tempo_by_4
      cue :tempo1
      if current_compass == 8
        current_compass = 1
      else
        current_compass = current_compass+1
      end
    end
  end
  
  in_thread do
    live_loop :kick do
      sync :tempo0
      sample :drum_heavy_kick
    end
  end
  
  in_thread do
    live_loop :cymbal1 do
      sync :tempo25
      sample :drum_cymbal_closed
    end
  end
  
  in_thread do
    live_loop :snare do
      sync :tempo5
      sample :drum_heavy_kick
      sample :drum_snare_soft
    end
  end
  
  in_thread do
    live_loop :cymbal2 do
      sync :tempo75
      sample :drum_cymbal_closed
    end
  end
  
    in_thread do
    live_loop :onTempo do
      sync :tempo75
      sample :drum_cymbal_closed
    end
  end
  
  sleep 1
end
