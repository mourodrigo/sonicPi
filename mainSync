live_loop :drums do
  step = 1
  step_half = 0.5
  step_half_half = 0.25
  
  in_thread do
    live_loop :tick do
      cue :tick
      sleep step
    end
  end
  
  in_thread do
    live_loop :kick do
      sync :tick
      sample :drum_heavy_kick
    end
  end
  
  in_thread do
    live_loop :cymbal1 do
      sync :tick
      sleep 0.25
      sample :drum_cymbal_closed
    end
  end
  
  in_thread do
    live_loop :snare do
      sync :tick
      sleep 0.5
      sample :drum_snare_hard
    end
  end
  
  in_thread do
    live_loop :cymbal2 do
      sync :tick
      sleep 0.75
      sample :drum_cymbal_closed
    end
  end
  
  sleep 1
end
